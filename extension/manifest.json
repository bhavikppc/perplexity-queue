{
  "manifest_version": 3,
  "name": "Perplexity Queue",
  "version": "1.0.0",
  "description": "Queue and batch process Perplexity API requests efficiently",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.perplexity.ai/*",
    "https://api.perplexity.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Perplexity Queue"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.perplexity.ai/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
